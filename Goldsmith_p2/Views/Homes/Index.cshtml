@model IEnumerable<Goldsmith_p2.Models.Customerss>

@{
    ViewBag.Title = "Index";
}
<style>
    footer {
        background-color: #8c7c3a;
        color: #fff;
    }
</style>

    <marquee>
        Shine Brighter with Our Exquisite Gold Jewelry
    </marquee>



    <button class="btn btn-outline-primary">
        @Html.ActionLink("New Item", "Create")
    </button>
    <p>

        @using (Html.BeginForm("Index", "Homes", FormMethod.Get))

        {

            <b>Search : </b>

            @Html.RadioButton("SearchBy", "Phone Number", true) <text>Phone Number</text>



            @Html.TextBox("search")

            <input type="submit" value="Search" class="btn btn-success" />

        }

    </p>
    <table class="table table-striped" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gold_in_grams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advance_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gold_in_grams)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Advance_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>

